generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id              Int    @id @default(autoincrement())
  name            String?
  email           String?
  publicKey       String  @default("") @unique
  xAccessToken    String?
  xRefreshToken   String?
  emailAccessToken    String?
  emailRefreshToken   String?
  emailProvider   String? // 'gmail', 'outlook', etc.
  zaps            Zap[]
  zerionSubscriptions ZerionSubscription[]
}

model Zap {
  id           String  @id @default(uuid())
  triggerId    String
  name         String?
  userId       Int
  trigger      Trigger?
  actions      Action[]
  zapRuns      ZapRun[]
  user         User @relation(fields: [userId], references: [id])
  nonceAccounts NonceAccount[]
  durableTransactions DurableTransaction[]
}

model Trigger {
  id          String  @id @default(uuid())
  zapId       String  @unique
  triggerId   String
  metadata    Json  @default("{}")
  type        AvailableTrigger @relation(fields: [triggerId], references: [id])
  zap         Zap                @relation(fields: [zapId], references: [id])
}

model Action {
  id            String  @id @default(uuid())
  zapId         String  
  zap           Zap     @relation(fields: [zapId], references: [id])
  actionId      String
  metadata      Json  @default("{}")
  type          AvailableAction @relation(fields: [actionId], references: [id])
  sortingOrder  Int    @default(0)
}

model AvailableAction {
  id       String @id @default(uuid())
  name     String
  image    String
  actions  Action[]
}

model AvailableTrigger {
  id       String @id @default(uuid())
  name     String 
  image    String
  triggers Trigger[]
}

model ZapRun {
  id           String @id @default(uuid())
  zapId        String
  metadata     Json
  zap          Zap @relation(fields: [zapId], references: [id])
  zapRunOutbox ZapRunOutbox?
  createdAt   DateTime  @default(now())
}

model ZapRunOutbox {
  id          String @id @default(uuid())
  zapRunId    String @unique
  zapRun      ZapRun @relation(fields: [zapRunId], references: [id])
}

model ZerionSubscription {
  id              String    @id @default(uuid())
  subscriptionId  String    @unique
  userId          Int
  zapId           String?
  walletAddress   String
  chainId         String    @default("solana")
  callbackUrl     String
  isActive        Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([walletAddress])
  @@index([subscriptionId])
  @@index([zapId])
}

/// Durable Nonce account managed by company wallet (authority)
model NonceAccount {
  id               String   @id @default(uuid())
  zapId            String
  flowKey          String   // logical grouping per flow or scenario
  noncePubkey      String   @unique
  authorityPubkey  String
  network          String   @default("devnet")
  status           String   @default("active") // active | used | closed
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  zap              Zap      @relation(fields: [zapId], references: [id])
  durableTxs       DurableTransaction[]

  @@index([zapId])
  @@index([flowKey])
}

/// Stored durable transaction to be submitted later
model DurableTransaction {
  id               String   @id @default(uuid())
  zapId            String
  flowKey          String
  nonceAccountId   String
  transfers        Json     // [{ toAddress, lamports } ...]
  platformFeeLamports BigInt @default(0)
  feePayerPubkey   String // user's wallet public key (payer)
  serializedTxB64  String // fully signed tx (company nonce auth + user)
  status           String  @default("pending") // pending | submitted | confirmed | failed | cancelled
  lastError        String?
  createdAt        DateTime @default(now())
  submittedAt      DateTime?
  confirmedAt      DateTime?

  // Relations
  nonceAccount     NonceAccount @relation(fields: [nonceAccountId], references: [id])
  zap              Zap          @relation(fields: [zapId], references: [id])

  @@index([zapId])
  @@index([flowKey])
  @@index([nonceAccountId])
  @@index([status])
}